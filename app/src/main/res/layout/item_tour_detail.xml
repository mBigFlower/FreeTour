<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:paddingRight="28dp">

    <com.flowerfat.initapp.ui.view.TimeAxisView
        android:id="@+id/item_time_axis_left_axis"
        android:layout_width="56dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/item_time_axis_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_time_axis_left_axis"
        android:layout_toRightOf="@+id/item_time_axis_left_axis"
        android:drawableLeft="@drawable/ic_access_time_ltgrey_18dp"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        tools:text="9:45 AM" />

    <TextView
        android:id="@+id/item_time_axis_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_time_axis_time"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/item_time_axis_time"
        android:layout_toRightOf="@+id/item_time_axis_time"
        android:drawableLeft="@drawable/ic_location_ltgray_18dp"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        tools:text="Bei Jing Street" />

    <TextView
        android:id="@+id/item_time_axis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_time_axis_time"
        android:layout_alignLeft="@+id/item_time_axis_time"
        android:layout_alignStart="@+id/item_time_axis_time"
        android:layout_marginBottom="14dp"
        android:textSize="24sp"
        tools:text="Board Meeting" />

    <ImageView
        android:id="@+id/item_time_axis_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_time_axis_time"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_more_horiz_ltgray_24dp" />

    <ImageView
        android:id="@+id/item_time_axis_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_time_axis_time"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:src="@drawable/ic_phone_ltgray_24dp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/item_time_axis_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_time_axis_time"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/item_time_axis_time"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/item_time_axis_more"
        android:gravity="center_vertical"
        android:paddingLeft="3dp"
        android:text="High go !"
        android:textSize="16sp" />

</RelativeLayout>
