<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#0000"
    android:orientation="vertical"
    android:paddingLeft="36dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/rb_traffic_bus_selector"
            android:padding="12dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/rb_traffic_car_selector"
            android:gravity="center"
            android:padding="12dp"
            android:paddingTop="0dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/rb_traffic_train_selector"
            android:padding="12dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/rb_traffic_plane_selector"
            android:padding="12dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/tour_details_edit_titleEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:hint="Title"
            app:met_floatingLabel="normal"
            app:met_singleLineEllipsis="true" />

        <TextView
            android:id="@+id/tour_details_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawablePadding="9dp"
            android:drawableRight="@drawable/ic_access_time_ltgray_18dp"
            android:gravity="right"
            android:padding="3dp"
            android:text="time set" />

    </LinearLayout>


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/tour_details_edit_addressEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        app:met_floatingLabel="normal"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/tour_details_edit_descriptionEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        app:met_floatingLabel="normal"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/tour_details_edit_phoneEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:inputType="number"
        android:maxLength="11"
        app:met_floatingLabel="normal"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/tour_details_edit_budgetEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="The budget"
        android:inputType="number"
        android:maxLength="5"
        app:met_floatingLabel="normal"
        app:met_singleLineEllipsis="true" />


</LinearLayout>
